#!/bin/sh

# currently comment out because otherwise it freezes
#. /usr/share/debconf/confmodule

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# $1 = version of the package being upgraded.
install() {

    REGISTRATIONAGENT_GROUP=registration-agent
    if ! getent group "$REGISTRATIONAGENT_GROUP" >/dev/null; then
        addgroup --system "$REGISTRATIONAGENT_GROUP" || exit 1
    fi

    REGISTRATIONAGENT_HOME=/var/lib
    REGISTRATIONAGENT_USER=registration-agent
    if ! getent passwd "$REGISTRATIONAGENT_USER" >/dev/null; then
        adduser --system \
           --home "${REGISTRATIONAGENT_HOME}" \
           --shell /bin/false \
           --no-create-home \
           --ingroup "$REGISTRATIONAGENT_GROUP" \
           --disabled-password \
           --disabled-login \
           --gecos "registrationAgent daemon" \
               "$REGISTRATIONAGENT_USER" || exit 1
    fi

    if [ ! -d ${REGISTRATIONAGENT_HOME} ];
    then
        #mkdir -p ${REGISTRATIONAGENT_HOME} || exit 1
        #chown ${REGISTRATIONAGENT_USER}:${REGISTRATIONAGENT_GROUP} "${REGISTRATIONAGENT_HOME}"
        #chmod 0700 "${REGISTRATIONAGENT_HOME}"
        echo "Home directory ${REGISTRATIONAGENT_HOME} not found!"
        exit 1
    fi

    REGISTRATION_AGENT_LOGDIR=/var/log/registration-agent
    chown ${REGISTRATIONAGENT_USER}:${REGISTRATIONAGENT_GROUP} ${REGISTRATION_AGENT_LOGDIR}
    chmod 0750 ${REGISTRATION_AGENT_LOGDIR}

}

case "$1" in
    configure)
        install "$2"
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

