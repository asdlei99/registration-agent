#!/bin/sh

set -e

if [ "$1" = "purge" ] ; then

        # MySQL uses debconf to get user confirmation before
        # wiping it's lib database directory, a similar
        # approach might be desirable for registrationAgent
        #rm -rf /var/lib/registration-agent
        rm -rf /var/run/registrationAgent

        if getent passwd registration-agent >/dev/null; then
                userdel registration-agent
        fi
        if getent group registration-agent >/dev/null; then
                groupdel registration-agent
        fi
fi


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

