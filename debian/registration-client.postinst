#!/bin/sh

# currently comment out because otherwise it freezes
#. /usr/share/debconf/confmodule

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# $1 = version of the package being upgraded.
install() {

    REGISTRATIONCLIENT_GROUP=registration-client
    if ! getent group "$REGISTRATIONCLIENT_GROUP" >/dev/null; then
        addgroup --system "$REGISTRATIONCLIENT_GROUP" || exit 1
    fi

    REGISTRATIONCLIENT_HOME=/var/lib
    REGISTRATIONCLIENT_USER=registration-client
    if ! getent passwd "$REGISTRATIONCLIENT_USER" >/dev/null; then
        adduser --system \
           --home "${REGISTRATIONCLIENT_HOME}" \
           --shell /bin/false \
           --no-create-home \
           --ingroup "$REGISTRATIONCLIENT_GROUP" \
           --disabled-password \
           --disabled-login \
           --gecos "registrationClient daemon" \
               "$REGISTRATIONCLIENT_USER" || exit 1
    fi

    if [ ! -d ${REGISTRATIONCLIENT_HOME} ];
    then
        #mkdir -p ${REGISTRATIONCLIENT_HOME} || exit 1
        #chown ${REGISTRATIONCLIENT_USER}:${REGISTRATIONCLIENT_GROUP} "${REGISTRATIONCLIENT_HOME}"
        #chmod 0700 "${REGISTRATIONCLIENT_HOME}"
        echo "Home directory ${REGISTRATIONCLIENT_HOME} not found!"
        exit 1
    fi

}

case "$1" in
    configure)
        install "$2"
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

