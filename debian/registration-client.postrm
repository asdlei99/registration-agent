#!/bin/sh

set -e

if [ "$1" = "purge" ] ; then

        # MySQL uses debconf to get user confirmation before
        # wiping it's lib database directory, a similar
        # approach might be desirable for registrationClient
        #rm -rf /var/lib/registration-client
        rm -rf /var/run/registrationClient

        if getent passwd registration-client >/dev/null; then
                userdel registration-client
        fi
        if getent group registration-client >/dev/null; then
                groupdel registration-client
        fi
fi


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

